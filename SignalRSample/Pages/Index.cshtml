@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-3">Total views:</div>
        <div class="col-4">
            <span id="totalViewsCounter"></span>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-3">Total users:</div>
        <div class="col-4">
            <span id="totalUsersCounter"></span>
        </div>
    </div>
</div>

<script type="module" src="~/js/signalr.js"></script>
<script type="module" src="~/js/UserCount.js"></script>